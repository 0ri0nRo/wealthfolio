// src/pages/Budget/components/BudgetLimits.tsx
import { BudgetCategory, BudgetLimit } from '@/lib/types/budget';
import { AlertCircle, Edit2, Plus, Trash2, TrendingDown } from 'lucide-react';
import React, { useState } from 'react';

interface BudgetLimitsProps {
  limits: BudgetLimit[];
  categories: BudgetCategory[];
  month: number;
  year: number;
  onAddLimit: (categoryId: string, amount: number) => void;
  onUpdateLimit: (limitId: string, amount: number) => void;
  onDeleteLimit: (limitId: string) => void;
}

export const BudgetLimits: React.FC<BudgetLimitsProps> = ({
  limits = [],
  categories,
  month,
  year,
  onAddLimit,
  onUpdateLimit,
  onDeleteLimit,
}) => {
  const [showAddModal, setShowAddModal] = useState(false);
  const [editingLimit, setEditingLimit] = useState<BudgetLimit | null>(null);

  const expenseCategoriess = categories.filter(c => c.type === 'expense' && c.isActive);

  return (
    <div className="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <div className="flex items-center justify-between mb-6">
        <h2 className="text-lg font-semibold text-gray-900 dark:text-white">
          Limiti Budget
        </h2>
        <button
          onClick={() => setShowAddModal(true)}
          className="inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-600 dark:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-lg transition-colors"
        >
          <Plus className="h-4 w-4 mr-1" />
          Aggiungi Limite
        </button>
      </div>

      {limits.length === 0 ? (
        <div className="text-center py-12">
          <TrendingDown className="mx-auto h-12 w-12 text-gray-400" />
          <h3 className="mt-2 text-sm font-medium text-gray-900 dark:text-white">
            Nessun limite impostato
          </h3>
          <p className="mt-1 text-sm text-gray-500 dark:text-gray-400">
            Imposta limiti di spesa per categoria per tenere sotto controllo il budget
          </p>
          <button
            onClick={() => setShowAddModal(true)}
            className="mt-4 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
          >
            <Plus className="h-5 w-5 mr-2" />
            Aggiungi primo limite
          </button>
        </div>
      ) : (
        <div className="space-y-4">
          {limits.map((limit) => {
            const category = limit.category;
            if (!category) return null;

            const spent = limit.spent || 0;
            const remaining = limit.limitAmount - spent;
            const percentage = (spent / limit.limitAmount) * 100;
            const isOverBudget = spent > limit.limitAmount;
            const isNearLimit = percentage >= 80 && !isOverBudget;

            return (
              <div
                key={limit.id}
                className={`border-l-4 p-4 rounded-lg ${
                  isOverBudget
                    ? 'border-red-500 bg-red-50 dark:bg-red-900/10'
                    : isNearLimit
                    ? 'border-yellow-500 bg-yellow-50 dark:bg-yellow-900/10'
                    : 'border-green-500 bg-gray-50 dark:bg-gray-700/50'
                }`}
              >
                <div className="flex items-start justify-between">
                  <div className="flex-1">
                    <div className="flex items-center gap-2 mb-2">
                      <span className="text-xl">{category.icon}</span>
                      <h3 className="font-medium text-gray-900 dark:text-white">
                        {category.name}
                      </h3>
                    </div>

                    <div className="grid grid-cols-3 gap-4 text-sm mb-3">
                      <div>
                        <p className="text-gray-600 dark:text-gray-400">Limite</p>
                        <p className="font-semibold text-gray-900 dark:text-white">
                          €{limit.limitAmount.toLocaleString('it-IT', { minimumFractionDigits: 2 })}
                        </p>
                      </div>
                      <div>
                        <p className="text-gray-600 dark:text-gray-400">Speso</p>
                        <p className={`font-semibold ${isOverBudget ? 'text-red-600' : 'text-gray-900 dark:text-white'}`}>
                          €{spent.toLocaleString('it-IT', { minimumFractionDigits: 2 })}
                        </p>
                      </div>
                      <div>
                        <p className="text-gray-600 dark:text-gray-400">Rimanente</p>
                        <p className={`font-semibold ${
                          isOverBudget ? 'text-red-600' : remaining < limit.limitAmount * 0.2 ? 'text-yellow-600' : 'text-green-600'
                        }`}>
                          €{Math.abs(remaining).toLocaleString('it-IT', { minimumFractionDigits: 2 })}
                          {isOverBudget && ' oltre'}
                        </p>
                      </div>
                    </div>

                    {/* Progress Bar */}
                    <div className="relative w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 overflow-hidden">
                      <div
                        className={`h-3 rounded-full transition-all duration-500 ${
                          isOverBudget
                            ? 'bg-red-600'
                            : isNearLimit
                            ? 'bg-yellow-500'
                            : 'bg-green-500'
                        }`}
                        style={{
                          width: `${Math.min(percentage, 100)}%`,
                        }}
                      />
                      {isOverBudget && (
                        <div
                          className="absolute top-0 left-0 h-3 bg-red-600 opacity-50"
                          style={{
                            width: '100%',
                          }}
                        />
                      )}
                    </div>

                    <div className="flex items-center justify-between mt-2">
                      <p className={`text-xs font-medium ${
                        isOverBudget ? 'text-red-600' : isNearLimit ? 'text-yellow-600' : 'text-gray-600 dark:text-gray-400'
                      }`}>
                        {percentage.toFixed(1)}% utilizzato
                      </p>

                      {isOverBudget && (
                        <div className="flex items-center gap-1 text-red-600">
                          <AlertCircle className="h-4 w-4" />
                          <span className="text-xs font-medium">Budget superato!</span>
                        </div>
                      )}
                      {isNearLimit && (
                        <div className="flex items-center gap-1 text-yellow-600">
                          <AlertCircle className="h-4 w-4" />
                          <span className="text-xs font-medium">Vicino al limite</span>
                        </div>
                      )}
                    </div>
                  </div>

                  {/* Actions */}
                  <div className="flex items-center gap-2 ml-4">
                    <button
                      onClick={() => setEditingLimit(limit)}
                      className="p-2 text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                      title="Modifica limite"
                    >
                      <Edit2 className="h-4 w-4" />
                    </button>
                    <button
                      onClick={() => {
                        if (confirm('Vuoi eliminare questo limite di budget?')) {
                          onDeleteLimit(limit.id);
                        }
                      }}
                      className="p-2 text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors"
                      title="Elimina limite"
                    >
                      <Trash2 className="h-4 w-4" />
                    </button>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      )}

      {/* Add/Edit Limit Modal */}
      {(showAddModal || editingLimit) && (
        <BudgetLimitModal
          categories={expenseCategoriess}
          existingLimit={editingLimit}
          month={month}
          year={year}
          onClose={() => {
            setShowAddModal(false);
            setEditingLimit(null);
          }}
          onSave={(categoryId, amount) => {
            if (editingLimit) {
              onUpdateLimit(editingLimit.id, amount);
            } else {
              onAddLimit(categoryId, amount);
            }
            setShowAddModal(false);
            setEditingLimit(null);
          }}
        />
      )}
    </div>
  );
};

// Modal Component
interface BudgetLimitModalProps {
  categories: BudgetCategory[];
  existingLimit: BudgetLimit | null;
  month: number;
  year: number;
  onClose: () => void;
  onSave: (categoryId: string, amount: number) => void;
}

const BudgetLimitModal: React.FC<BudgetLimitModalProps> = ({
  categories,
  existingLimit,
  month,
  year,
  onClose,
  onSave,
}) => {
  const [categoryId, setCategoryId] = useState(String(existingLimit?.categoryId || ''));
  const [amount, setAmount] = useState(existingLimit?.limitAmount || 0);
  const [error, setError] = useState('');

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();

    if (!categoryId) {
      setError('Seleziona una categoria');
      return;
    }
    if (amount <= 0) {
      setError('L\'importo deve essere maggiore di 0');
      return;
    }

    onSave(String(categoryId), amount);
  };

  const monthName = new Date(year, month - 1).toLocaleDateString('it-IT', { month: 'long', year: 'numeric' });

  return (
    <div className="fixed inset-0 z-50 overflow-y-auto">
      <div className="flex min-h-screen items-center justify-center p-4">
        <div className="fixed inset-0 bg-black bg-opacity-50" onClick={onClose} />

        <div className="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
          <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            {existingLimit ? 'Modifica Limite Budget' : 'Nuovo Limite Budget'}
          </h3>

          <p className="text-sm text-gray-600 dark:text-gray-400 mb-6">
            Imposta un limite di spesa per {monthName}
          </p>

          <form onSubmit={handleSubmit} className="space-y-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Categoria
              </label>
              <select
                value={categoryId}
                onChange={(e) => {
                  setCategoryId(e.target.value);
                  setError('');
                }}
                disabled={!!existingLimit}
                className="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white disabled:opacity-50"
              >
                <option value="">Seleziona categoria</option>
                {categories.map(cat => (
                  <option key={cat.id} value={cat.id}>
                    {cat.icon} {cat.name}
                  </option>
                ))}
              </select>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Limite Mensile (€)
              </label>
              <input
                type="number"
                step="0.01"
                min="0"
                value={amount || ''}
                onChange={(e) => {
                  setAmount(parseFloat(e.target.value) || 0);
                  setError('');
                }}
                className="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                placeholder="0.00"
              />
            </div>

            {error && (
              <p className="text-sm text-red-600">{error}</p>
            )}

            <div className="flex gap-3 pt-4">
              <button
                type="button"
                onClick={onClose}
                className="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 font-medium"
              >
                Annulla
              </button>
              <button
                type="submit"
                className="flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium"
              >
                Salva
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  );
};
